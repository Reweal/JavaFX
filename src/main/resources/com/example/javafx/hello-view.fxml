<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ProgressBar?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafx.DeaMediaPlayer"
            styleClass="border-pane" minWidth="600" maxWidth="600" maxHeight="150" minHeight="75"
            prefWidth="600" prefHeight="135">
    <padding>
        <Insets bottom="5.0" top="5.0" left="5.0" right="5.0"/>
    </padding>
    <top>
        <ProgressBar fx:id="musicProgressBar" prefWidth="600" maxWidth="Infinity" styleClass="music-progress-bar" visible="false"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Button fx:id="playButton" text="Choose Music" onAction="#onPlayButtonClick"
                    styleClass="choose-music-button"/>
        </VBox>
    </center>
    <bottom>
        <HBox fx:id="controlBox" alignment="CENTER" spacing="20.0" styleClass="bottom-box" visible="false">
            <Button fx:id="pauseButton" text="Pause Music" onAction="#onPauseButtonClick" styleClass="pause-music-button" visible="false"/>
            <Button fx:id="stopButton" text="Stop Music" onAction="#onStopButtonClick" styleClass="stop-music-button" visible="false"/>
            <Region HBox.hgrow="ALWAYS" />
            <Slider fx:id="volumeSlider" max="1.0" value="1.0" prefWidth="200" maxWidth="200" minWidth="200" visible="false" styleClass="volume-slider"/>
        </HBox>
    </bottom>
</BorderPane>
