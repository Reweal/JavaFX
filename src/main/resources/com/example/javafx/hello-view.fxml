<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafx.DeaMediaPlayer"
            styleClass="border-pane" minWidth="600" maxWidth="600" maxHeight="150" minHeight="75"
            prefWidth="600" prefHeight="135">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Button fx:id="playButton" text="Choose Music" onAction="#onPlayButtonClick" styleClass="music-button"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="pauseButton" text="Pause Music" onAction="#onPauseButtonClick" styleClass="music-button" visible="false"/>
            <Button fx:id="stopButton" text="Stop Music" onAction="#onStopButtonClick" styleClass="music-button" visible="false"/>
            <Region HBox.hgrow="ALWAYS" />
            <Slider fx:id="volumeSlider" min="0.0" max="1.0" value="1.0" prefWidth="200" maxWidth="200" minWidth="200" visible="false"/>
        </HBox>
    </bottom>
</BorderPane>
